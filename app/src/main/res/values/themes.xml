<?xml version="1.0" encoding="utf-8"?>
<resources>

<style name="Theme.MVVM" parent="android:Theme.Material.Light.NoActionBar">
    <item name="android:windowTranslucentStatus">true</item>
    <item name="android:statusBarColor">@android:color/transparent</item>
    <item name="android:navigationBarColor">@android:color/transparent</item>
    <item name="windowSplashScreenIconBackgroundColor">@android:color/black</item>
</style>

<style name="Theme.MVVM.SplashTheme" parent="Theme.SplashScreen.IconBackground">
    <item name="windowSplashScreenBackground">#FFF</item>
    <item name="postSplashScreenTheme">@style/Theme.MVVM</item>
</style>
</resources>